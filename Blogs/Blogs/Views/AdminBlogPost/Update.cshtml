  @model UpdateBlogPostRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container text-center">
        <h1>Update Blog Post - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
   <form method="post"enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>
        <div class="mb-3">
            <label class="form-label">Heading</label>
            <input type="text" class="form-control" asp-for="Heading" />
          
        </div>
        <div class="mb-3">
            <label class="form-label">PageTitle</label>
            <input type="text" class="form-control" asp-for="PageTitle" />
        </div>
        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea type="text" class="form-control" asp-for="Content"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Short Description</label>
            <input type="text" class="form-control" asp-for="ShortDescription" />
        </div>
        <div class="mb-3">
            <label class="form-label">Featured Image Url</label>
            <input type="file" class="form-control" asp-for="FeaturedImageUrl" name="file" />
        </div>
       
        <div class="mb-3">
            <label class="form-label">Published Date</label>
            <input type="date" class="form-control" asp-for="PublishedDate" />
        </div>
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" />
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="Visible"/>
            <lable class="form-check-lable">Is Visible?</lable>
        </div>
        
        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Update</button>
        </div>
       
   </form>     
</div>
