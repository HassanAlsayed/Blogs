@model BlogPost

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container text-center">
        <h1>Delete Blog Post - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Heading</label>
            <input type="text" class="form-control" asp-for="Heading" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">PageTitle</label>
            <input type="text" class="form-control" asp-for="PageTitle" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea type="text" class="form-control" asp-for="Content" readonly></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Short Description</label>
            <input type="text" class="form-control" asp-for="ShortDescription" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Featured Image Url</label>
            <input type="text" class="form-control" asp-for="FeaturedImageUrl" readonly />
        </div>
       
        <div class="mb-3">
            <label class="form-label">Published Date</label>
            <input type="date" class="form-control" asp-for="PublishedDate" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" readonly />
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="Visible" readonly />
            <lable class="form-check-lable">Is Visible?</lable>
        </div>

        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Delete</button>
        </div>

    </form>
</div>
