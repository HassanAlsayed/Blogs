@model AddBlogPostRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container text-center">
        <h1>Add New Blog Post - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
   <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Heading</label>
            <input type="text" class="form-control" asp-for="Heading" />
            <span class="text-danger" asp-validation-for="Heading"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">PageTitle</label>
            <input type="text" class="form-control" asp-for="PageTitle" />
            <span class="text-danger" asp-validation-for="PageTitle"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea type="text" class="form-control" id="content" asp-for="Content"></textarea>
            <span class="text-danger" asp-validation-for="Content"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Short Description</label>
            <input type="text" class="form-control" asp-for="ShortDescription" />
            <span class="text-danger" asp-validation-for="ShortDescription"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="FeaturedImageUrl">Featured Image Url</label>
            <input type="file" class="form-control" name="file" asp-for="FeaturedImageUrl" />
            <span class="text-danger" asp-validation-for="FeaturedImageUrl"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Published Date</label>
            <input type="date" class="form-control" asp-for="PublishedDate" />
            <span class="text-danger" asp-validation-for="PublishedDate"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" />
            <span class="text-danger" asp-validation-for="Author"></span>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="Visible"/>
            <lable class="form-check-lable">Is Visible?</lable>
        </div>
        
        <div class="mb-3">
            <label class="form-lable">Tags</label>
            <select class="form-select" asp-for="SelectedTags" asp-items="@Model.Tags">
               
            </select>
        </div>

        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Save</button>
        </div>
       
   </form>     
</div> 

@section Scripts{
    <script>
        var editor = new ForalaEditor('#content');
    </script>
}