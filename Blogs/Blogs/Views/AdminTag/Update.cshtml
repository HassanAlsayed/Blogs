@model UpdateTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container text-center">
        <h1>Update Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-2">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="Id" readonly asp-for="Id" />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark me-2">Update</button>
                <a class="btn btn-danger" asp-controller="AdminTag" asp-action="GetAll">Cancel</a>
            </div>
        </div>
    </form>
</div>
