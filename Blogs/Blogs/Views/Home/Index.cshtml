@model IEnumerable<BlogPost>

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Blog - The Dev Blog
            </h1>
            <p class="lead">
                Blog is the home to coding blogs covering a vast range of topics like HTML, CSS, JavaScript, ASP .NET, C#,
                Angular etc. Want to read the latest dev articles? Join the blog app and 
                get weekly blogs in your email.
            </p>
        </div>
        
        <div class="col-12 col-lg-6">
            <img src="./images/product/e797adb0-e2f1-49e2-99a9-9dee48d998a4.png"
                 alt="Blog - Dev Blogs" 
                 class="d-block mx-lg-auto img-fluid" width="300" />
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
         
                @foreach (var blogPost in Model)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                             class="mb-2 d-block img-fluid" height="400" width="500"/>
                        
                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-1">
                            Author: @blogPost.Author
                            <br/>
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>
                        
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                                    {
                                        <span class="badge bg-secondary me-1">@tag.Name</span>
                                    }
                        </p>
                        <p class="mb-4">@blogPost.ShortDescription</p>
                        
                        <a class="btn btn-dark" 
                           asp-area=""
                           asp-controller="Blogs"
                           asp-action="Index"
                           asp-route-blogId="@blogPost.Id"
                           >Read More</a>
                    </div>
                }
            
        </div>
    </div>
</div>